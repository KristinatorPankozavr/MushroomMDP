<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MushroomMDP.Views.AboutPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" Margin="10">
            <Label x:Name="titleLabel" FontSize="26" HorizontalTextAlignment="Center"/>
            <Label TextColor="Red" IsVisible="False" HorizontalTextAlignment="Center" x:Name="toxicLabel">Ядовит</Label>
            <Image x:Name="mushroomImage"></Image>
            <Label x:Name="descriptionLabel"></Label>
            <Button x:Name="wikiButton" Clicked="wikiButton_Clicked" Text="Подробнее"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>